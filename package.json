{
  "name": "grooveboat",
  "version": "0.1.0",
  "description": "Shared music listening and DJing",
  "repository": {
    "type": "git",
    "url": "git@github.com:RocHack/grooveboat.git"
  },
  "contributors": [
    "Charles Lehner <cel@celehner.com> (http://celehner.com/)",
    "Steve Gattuso <steve@stevegattuso.me> (http://stevegattuso.me)",
    "Nate Book (http://www.natembook.com/)"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/RocHack/grooveboat/issues"
  },
  "dependencies": {
    "browserify": "^2.36.1",
    "watchify": "^0.10.2",
    "less": "^1.5.1",
    "md5-jkmyers": "^0.0.1",
    "audio-metadata": "^0.3.0",
    "wildemitter": "^1.0.1",
    "partialify": "^3.1.1",
    "angular-local-storage": "git://github.com/grevory/angular-local-storage#0.0.5",
    "jquery": "^2.1.1",
    "jquery-ui": "^1.10.5",
    "rtcpeerconnection": "^2.3.3"
  },
  "devDependencies": {
    "watchify": "^0.4.1",
    "catw": "^0.2.0",
    "uglify-js": "^2.4.13",
    "napa": "^0.4.1"
  },
  "napa": {
    "angular": "angular/bower-angular",
    "angular-route": "angular/bower-angular-route",
    "angular-sanitize": "angular/bower-angular-sanitize",
    "angular-ui-sortable": "angular-ui/ui-sortable",
    "emoji-images": "nmbook/emoji-images.js"
  },
  "scripts": {
    "install": "napa",
    "watch-css": "catw -c 'lessc -' 'style/*.less' -o static/bundle.css -v",
    "watch-js": "watchify browser/*.js -o static/bundle.js --debug --verbose",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' 'style/*.less' > static/bundle.css",
    "build-js": "browserify browser/*.js > static/bundle.js",
    "build": "npm run build-css && npm run build-js"
  },
  "browserify": {
    "transform": [
      "partialify"
    ]
  }
}
