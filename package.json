{
  "name": "grooveboat",
  "version": "0.1.0",
  "description": "Shared music listening and DJing",
  "repository": {
    "type": "git",
    "url": "git@github.com:RocHack/grooveboat.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/RocHack/grooveboat/issues"
  },
  "dependencies": {
    "browserify": "^4.1.6",
    "watchify": "^0.10.2",
    "less": "^1.5.1",
    "md5-jkmyers": "^0.0.1",
    "audio-metadata": "^0.3.0",
    "wildemitter": "^1.0.1",
    "partialify": "^3.1.1",
    "angular-local-storage": "grevory/angular-local-storage#0.0.5",
    "jquery": "^2.1.1",
    "jquery-ui": "^1.10.5",
    "rtcpeerconnection": "^2.3.3",
    "websocket": "1.0.x",
    "node-uuid": "1.4.x"
  },
  "devDependencies": {
    "watchify": "^0.4.1",
    "catw": "^0.2.0",
    "uglify-js": "^2.4.13",
    "clean-css": "^2.1.8",
    "napa": "^0.4.1"
  },
  "napa": {
    "angular": "angular/bower-angular",
    "angular-route": "angular/bower-angular-route",
    "angular-sanitize": "angular/bower-angular-sanitize",
    "angular-ui-sortable": "angular-ui/ui-sortable",
    "angular-ui-utils": "angular-ui/ui-utils",
    "emoji-images": "nmbook/emoji-images.js"
  },
  "scripts": {
    "install": "napa",
    "watch-css": "catw -c 'lessc -' 'style/*.less' -o static/bundle.css -v",
    "watch-js": "watchify browser/*.js -o static/bundle.js --debug --verbose",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' 'style/*.less' | cleancss > static/bundle.css",
    "build-js": "browserify browser/*.js | uglifyjs -c > static/bundle.js",
    "build": "npm run build-css && npm run build-js",
    "start": "node server/groovebuoy.js",
    "start-build": "npm run build && npm start",
    "start-watch": "npm run watch & npm start"
  },
  "browserify": {
    "transform": [
      "partialify"
    ]
  }
}
